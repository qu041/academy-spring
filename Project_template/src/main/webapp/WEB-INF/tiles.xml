<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC 
	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
	
<tiles-definitions>
	
	<definition name="*.*" template="/WEB-INF/views/layout/main.jsp">
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/views/content/{1}/{2}.jsp"></put-attribute>
	</definition>
	
	<definition name="index" template="/WEB-INF/views/layout/main.jsp">
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/views/content/index.jsp"></put-attribute>
	</definition>
	
</tiles-definitions>