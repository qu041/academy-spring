<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!--  스프링 시큐리티의 모든 설정 security-context.xml  -->
	
	<!-- 403 핸들러 -->
	<bean id="customAccessDeniedHandler" class="com.test.project.auth.CustomAccessDeniedHandler"></bean>
	
	<!-- 로그인 성공 핸들러  -->
	<bean id="customLoginSuccessHandler" class="com.test.project.auth.CustomLoginSuccessHandler"></bean>
	
	
	<!-- 14.PasswordEncoder 빈 만들기(정식)  
		- BCryptPasswordEncoder: blowfish 알고리즘
	 -->
	<bean id="bCryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"></bean>
	
	<!-- 18. 로그인 처리 인증정보관리  -->
	<bean id="customUserDetailsService" class="com.test.project.auth.CustomUserDetailsService"></bean>
	
	<security:http>
		
		<!-- 허가 -->
		<security:intercept-url pattern="/" access="permitAll" />
		<!-- <security:intercept-url pattern="/member.do" access="hasRole('ROLE_MEMBER')" />
		<security:intercept-url pattern="/admin.do" access="hasRole('ROLE_ADMIN')" /> -->
		
		
		<!-- 8.1 403 처리(핸들러 사용) -->
		<security:access-denied-handler ref="customAccessDeniedHandler"  />
		
		
		<!-- 10. 로그아웃 처리 -->
		<security:logout logout-url="/member/logout" invalidate-session="true" logout-success-url="/" delete-cookies=""  />
		
		<!-- 11. 로그인 성공 후 처리 핸들러 -->
		<security:form-login login-page="/member/login" authentication-success-handler-ref="customLoginSuccessHandler" />
		
	</security:http>	
	
	
	<!-- 18. 17번기반 + 로그인 처리 + 인증 정보 관리  -->
	<security:authentication-manager>
		<security:authentication-provider user-service-ref="customUserDetailsService">
			<security:password-encoder ref="bCryptPasswordEncoder" />
		</security:authentication-provider>
	</security:authentication-manager>	
	
</beans>
