<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<!-- src/main/resources > mappers > code.xml -->
<!-- XML Mapper -->
<mapper namespace="code">

	<select id="countTest" resultType="Integer">
		select count(*) from tblAddress
	</select>
	
	<select id="llist" resultType="ldto">
		select * from tblLanguage
	</select>
	
	<insert id ="add" parameterType="cdto">
		insert into tblCode (seq, subject, code, regdate,language) values (seqCode.nextVal,#{subject},#{code},default,#{language})
	</insert>
	
	<resultMap type="ldto" id="languageMap">
		<id column="name" property="name" />
		<result column="icon" property="icon" />
		<result column="color" property="color" />
	</resultMap>
	
	<resultMap type="cdto" id="codeMap">
		<id column="seq" property="seq" />
		<result column="subject" property="subject" />
		<result column="code" property="code" />
		<result column="regdate" property="regdate" />
		<result column="language" property="language" />
		<association property="ldto" resultMap="languageMap"></association>
	</resultMap>
	
	
	<select id="list" resultMap="codeMap">
		select
		    *
		from tblCode c
		    inner join  tblLanguage l on c.language = l.name
					order by seq desc
	</select>
	
	<select id="get" parameterType="String" resultType="cdto">
		select * from tblCode
			where seq = #{seq}
	</select>
	
	
</mapper>















